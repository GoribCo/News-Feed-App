<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/news_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view"
        style="@style/NewsCardView"
        app:cardCornerRadius="@dimen/news_cardView_cornerRadius"
        app:cardElevation="@dimen/elevation"
        >

        <RelativeLayout
            android:id="@+id/tourPlace_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageOfStory_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@color/colorBlack"/>

            <TextView
                android:id="@+id/titleOfStory_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="@dimen/tour_card_view_text_view_marginBottom"
                android:ellipsize="end"
                android:maxLines="4"
                android:text="Title"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>