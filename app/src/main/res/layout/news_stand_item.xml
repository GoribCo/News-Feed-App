<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        style="@style/NewsstandCardView"
        app:cardCornerRadius="@dimen/news_cardView_cornerRadius">

        <RelativeLayout
            android:id="@+id/newsstand_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageOfNewsstand_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:background="@color/colorBlack"
                android:elevation="@dimen/elevation"/>


            <TextView
                android:id="@+id/titleOfNewsstand_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="@dimen/tour_card_view_text_view_marginBottom"
                android:text="Title"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>